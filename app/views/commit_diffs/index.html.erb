<%= partial("repositories/header_compact", {
        :repository => repository,
        :project => project,
        :app => Gitorious,
        :active => :commits
      }) %>
<div class="container gts-body">
  <% @title = t("views.commits.title", :commit => h(commit.id)) %>

  <%= render(:partial => "commit_infobox", :locals => {
          :commit => commit,
          :project => project,
          :repository => repository,
          :committer_user => committer_user
        }) -%>
  <% if diffs.blank? -%>
    <p><%= t("views.commits.message", :path => tree_path(commit.id)) %></p>
  <% elsif !commit.merge? -%>
    <%= render_diff_stats(commit.stats) -%>
    <%= render_diffmode_selector(repository, commit, mode) -%>
    <%= render(:partial => "commits/diffs", :locals => {
            :mode => mode,
            :diffs => diffs,
            :comments => comments,
            :repository => repository,
            :commit => commit
          }) -%>
  <% end -%>
</div>
