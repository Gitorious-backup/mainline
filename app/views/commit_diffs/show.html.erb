<%= partial("repositories/header_compact", {
        :repository => repository,
        :project => repository.project,
        :app => Gitorious,
        :active => :commits
      }) %>
<div class="container gts-body">
  <h1><%= @title = t("views.commits.compare_title", :last_commit => range.last[0..7], :first_commit => range.first[0..7]) %></h1>
  <% if diffs.blank? -%>
    <p><%= t("views.commits.message", :path => tree_path(range.last)) %></p>
  <% else -%>
    <%= render_diff_stats(commit.stats) -%>
    <%= render_diffmode_selector(repository, commit, mode) -%>
    <% diffs.each do |diff| %>
      <%= renderer.render(diff).html_safe %>
    <% end %>
  <% end -%>
</div>
