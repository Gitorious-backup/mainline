<%= partial("repositories/header_compact", {
        :repository => commit.repository,
        :project => commit.project,
        :app => Gitorious,
        :active => :commits
      }) %>
<div class="container gts-body">
  <% @title = t("views.commits.title", :commit => h(commit.id)) %>

  <%= render(:partial => "commit_meta", :locals => {
          :commit => commit,
          :project => commit.project,
          :repository => commit.repository,
          :committer_user => commit.committer_user,
          :author_user => commit.author_user
        }) -%>
  <% if commit.diffs.blank? -%>
    <p><%= t("views.commits.message", :path => tree_path(commit.id)) %></p>
  <% elsif !commit.merge? -%>
    <%= pull_box 'Summary' do %>
      <%= render_diff_stats(commit.stats) -%>
    <% end %>
    <%= render_diffmode_selector(commit.repository, commit, mode) -%>
    <% commit.diffs.each do |diff| %>
      <%= renderer.render(diff).html_safe %>
    <% end %>
  <% end -%>
  <br/>
  <div class="gts-commit-comments" data-gts-env-commit-comments-url="<%= project_repository_commit_comments_path(commit.project, commit.repository, commit.id, :format => "json") %>">
    <h3 class="gts-legend">Comments</h3>
    <div class="hidden">
      <%= simple_form_for(Comment.new, {
              :as => :comment,
              :url => project_repository_create_commit_comment_path(commit.project, commit.repository, commit.id),
              :html => { :class => "form-horizontal gts-comment-form", :id => "comment_form_tpl" }
            }) do |form| -%>
        <%= render(:partial => "comments/form", :locals => { :form => form }) %>
        <div class="comment-extra"></div>
      <% end %>
    </div>
  </div>
</div>
