<% @title = t("views.graphs.title", :repo_url => h(@repository.url_path), :ref => h(@ref)) -%>
<% content_for(:head) do %>
  <%= auto_discovery_link_tag(:atom, atom_auto_discovery_url,
        :title => atom_auto_discovery_title) -%>
<% end %>

  <%= partial("repositories/repo_header", {
          :repository => repository,
          :project => repository.project,
          :ref => ref,
          :app => Gitorious,
          :active => :commits
        }) %>


<div class="container">

  <ul class="nav nav-tabs">
    <li>
      <%= link_to "Log", project_repository_commits_in_ref_path(@project,
                                             @repository, params[:branch]) %>
    </li>
    <li  class="active">
      <%= link_to "Graph #{@ref}", "" %>
    </li>
  </ul>

<h1>
  <%= t("views.graphs.title", :repo_url => h(@repository.url_path), :ref => h(@ref)) -%>
</h1>

<%= cache([[@project, @repository], :graphs, @ref, params[:type]], {:expires_in => 10.minutes}) do -%>
  <div class="capillary" id="capillary-log"
       data-id-url="<%= "/#{@project.slug}/#{@repository.name}/graph/{{id}}" %>"
       data-message-url="<%= "/#{@project.slug}/#{@repository.name}/commit/{{id}}" %>"
       data-capillary-url="<%= url_for(:controller => "api/graphs", :action => "show", :branch => params[:branch], :type => params[:type]) %>">
    <h2>This page requires JavaScript</h2>
  </div>

  <%= javascript_include_tag capillary_js_paths + ["gitorious/log-graph"], :cache => "capillary" %>
<% end -%>



</div>