<%= form.input(:description, :label => t("views.groups.description"), :input_html => { :rows => 5 }) %>

<%= form.input(:avatar, {
        :label => t("views.groups.avatar"),
        :hint => !group.avatar? ? "" : image_tag(group.avatar.url(:thumb))
      }) %>

<% if group.is_a?(LdapGroup) %>
  <%= form.input(:ldap_group_names, :hint => "Enter LDAP group DNs, one per line "+
        "<strong>Note:</strong> entries should be relative to the LDAP base DN") %>
<% end %>
