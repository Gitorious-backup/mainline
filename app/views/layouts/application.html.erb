%><!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= @title %> - <%= current_site.title %></title>
    <meta http-equiv="X-UA-Compatible" content="chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% Gitorious::View.theme_stylesheets(current_site).each do |stylesheet| %>
      <link href="<%= stylesheet %>" rel="stylesheet" type="text/css">
    <% end %>
    <%= content_for(:head) %>
    <script type="text/javascript" src="/javascripts/lib/jquery.js"></script>
    <script type="text/javascript" src="/javascripts/lib/jquery-migrate.js"></script>
    <script type="text/javascript" src="/javascripts/jquery_ujs.js"></script>
    <script type="text/javascript" src="/javascripts/lib/jquery.pjax.js"></script>
    <script type="text/javascript" src="/javascripts/lib/bootstrap.min.js"></script>
    <script type="text/javascript" src="/ui3/jquery-ui/ui/jquery.ui.core.js"></script>
    <script type="text/javascript" src="/ui3/jquery-ui/ui/jquery.ui.widget.js"></script>
    <script type="text/javascript" src="/ui3/jquery-ui/ui/jquery.ui.mouse.js"></script>
    <script type="text/javascript" src="/ui3/jquery-ui/ui/jquery.ui.selectable.js"></script>
    <%= content_for(:javascripts) %>
    <% if defined?(session) && session[:_csrf_token] %>
      <meta class="csrf-param" content="authenticity_token" name="csrf-param" data-gts-env-csrf-param="authenticity_token">
      <meta class="csrf-token" content="<%= session[:_csrf_token] %>" name="csrf-token" data-gts-env-csrf-token="<%= session[:_csrf_token] %>">
    <% end %>
  </head>
  <body<%= " class=\"#{@body_class}\"".html_safe if @body_class %>>
    <div class="page-wrapper">
      <div class="page-content">
        <div class="gts-masthead navbar">
          <div class="navbar-inner">
            <div class="container">
              <a href="<%= root_path %>" class="gts-logo"><%= site_logo(current_site).html_safe %></a>
              <ul class="nav">
                <li>
                  <a href="<%= activity_path %>">Activities</a>
                </li>
                <li>
                  <a href="<%= projects_path %>">Projects</a>
                </li>
                <li>
                  <a href="<%= about_path %>">About</a>
                </li>
              </ul>
              <div class="pull-right">
                <form action="<%= search_path %>" class="navbar-search pull-left" method="get">
                  <input type="search" placeholder="Search" class="search-query span2" name="q">
                </form>
                <div class="pull-right btn-group login_button">
                  <a href="<%= login_path %>" class="btn btn-inverse">
                    <i class="icon-user icon-white"></i> Sign in
                  </a>
                </div>
              </div>
            </div>
            <% unless (system_message = Gitorious::Configuration.get("system_message")).blank? -%>
              <%= alerts({ :notice => "<strong>#{t('views.layout.system_notice')}:</strong> #{system_message}" }).html_safe %>
            <% end -%>
            <%= alerts(defined?(flash) ? flash : {}).html_safe %>
          </div>
        </div>
        <% if defined?(repository_meta) %>
          <%= repo_header(repository_meta, {
                  :current_user => current_user,
                  :ref => ref,
                  :active => :source,
                  :header_level => 2
                }) %>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <div class="footer">
      <%= partial("layouts/footer", :current_site => current_site) %>
    </div>
    <% if google_analytics_enabled? %>
      <script data-gts-env-analytics-account="<%= google_analytics_account %>" data-gts-env-analytics-domain-name="<%= google_analytics_domain %>"></script>
    <% end %>
    <script data-gts-env-user-view-state-path="<%= view_state_users_path(:format => "json") %>"></script>
    <% repo = defined?(repository_meta) ? repository_meta : (defined?(repository) ? repository : nil) %>
    <% if repo %>
      <script
        data-gts-env-repository-refs-url="<%= repository_refs_path(:project_id => repo.project, :repository_id => repo) %>"
        data-gts-env-commit-url-template="<%= project_repository_commit_path(repo.project, repo, "%oid%").sub("%oid%", "\#{oid}") %>">
      </script>
    <% end %>
    <% Gitorious::View.theme_javascripts(current_site).each do |javascript| %>
      <script src="<%= javascript %>"></script>
    <% end %>
    <script type="text/javascript">
      $(function() {
        $('.alert').append('<a class="close" data-dismiss="alert" href="#">&times;</a>').alert();
      });
    </script>
    <%= content_for(:footer) %>
  </body>
</html>
