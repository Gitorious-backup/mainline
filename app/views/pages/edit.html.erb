<%= partial("projects/header", {
        :project => project,
        :app => Gitorious,
        :active => :wiki,
        :header_level => 2
      }) %>

<% action = page.new? ? t("views.common.creating") : t("views.common.editing") + " #{t("views.pages.page")}" -%>

<% @title = "#{action} #{page.title}" %>
<div class="container">
  <h1><%= action %> <%= link_to(h(page.title), project_page_path(project, page.title)) -%></h1>
  <% if page.new? -%>
    <div class="alert">
      <p>
        The page "<%=h page.title -%>" does not exist yet. You can create it
        below if you like.
      </p>
    </div>
  <% end -%>

  <%= form_for([project, page], :builder => Gitorious::View::FormBuilder) do |f| -%>
    <div class="row-fluid">
      <div class="span6">
        <div class="control-group">
          <div class="controls">
            <%= f.text_area(:content, {
                    :class => "gts-live-markdown-preview",
                    :"data-gts-preview-target" => "markdown-preview-content",
                    :rows => 25,
                    :style => "width: 100%"
                  }) %>
            <p class="help-block">
              Use <a data-toggle="collapse" data-target="#markdown-help-content" class="dropdown-toggle" href="#markdown-help-content">Markdown</a> for formatting
            </p>
            <%= f.markdown_help(:content) %>
            <%= f.submit(:class => "btn btn-primary") -%>
          </div>
        </div>
      </div>
      <div class="span6" id="markdown-preview-content" class="gts-markdown-preview help-block">
        <div></div>
      </div>
    </div>
  <% end -%>
</div>
