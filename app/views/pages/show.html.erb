<% @page_title = h(@project.title) + " - " + h(@page.title) + " - " + t("views.layout.pages")  -%>
<%= breadcrumbs_from(@root) -%>

<div class="page-header">
  <h1>
    <%= h(@page.title) -%> 
  </h1>
</div>

<%= wikize(@page.content) -%>

<% if commit = @page.commit -%>
<div class="page-meta">
  <%= render :partial => "actions" -%>
  <p>
    <% if @page.committed_by_user -%>
      <%#= t("views.pages.last_edited_by", 
          :link_or_name => link_to(h(@page.committed_by_user.title), user_path(@page.committed_by_user))) -%>
    <% else -%>
      <%= t("views.pages.last_edited_by", :link_or_name => h(commit.committer.name)) -%>
    <% end -%>
    <%= commit.date.to_s(:short) -%>
  </p>
</div>
<% end -%>

<% if logged_in? -%>
<div class="wiki_cloning_instructions">
  <h3>Clone this wiki:</h3>
  <% if @project.wiki_repository.wiki_writable_by?(current_user) -%>
    <p><pre>git clone <%= writable_wiki_url(@project) -%></pre></p>
  <% else -%>
    <p><pre>git clone <%= regular_wiki_url(@project) -%></pre></p>
  <% end -%>
</div>
<% end -%>
