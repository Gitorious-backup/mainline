<% @page_title = h(@project.title) + " - " + h(@page.title) + " - " + t("views.layout.pages")  -%>
<%= breadcrumbs_from(@root) -%>

<div class="page-header">
  <h1>
    <%= h(@page.title) -%> 
  </h1>
</div>

<%= wikize(@page.content) -%>

<% if commit = @page.commit -%>
<div class="page-meta">
  <%= render :partial => "actions" -%>
  <p>
    <% if @page.committed_by_user -%>
      <%#= t("views.pages.last_edited_by", 
          :link_or_name => link_to(h(@page.committed_by_user.title), user_path(@page.committed_by_user))) -%>
    <% else -%>
      <%= t("views.pages.last_edited_by", :link_or_name => h(commit.committer.name)) -%>
    <% end -%>
    <%= commit.date.to_s(:short) -%>
  </p>
  
  <p class="clone_urls">
    <span id="repo-<%= @repository.id -%>-git-url">
      <strong><%= t("views.repos.wiki_clone_url") -%>:</strong>
      <code>
        git clone <a href="<%= h(@repository.clone_url) -%>" class="link_noop"><%= h(@repository.clone_url) -%></a>
      </code>
    </span>

    <br />
    <% if logged_in? && current_user.can_write_to?(@repository) -%>
      <strong><%= t("views.repos.wiki_push_url") -%>:</strong>
      <code><%= h(@repository.push_url) -%></code>
    <% end -%>
  </p>
</div>
<% end -%>
