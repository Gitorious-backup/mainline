<%= partial("projects/header", {
        :project => ProjectPresenter.new(project),
        :app => Gitorious,
        :active => :admin,
        :header_level => 2
      }) %>

<% @title = "Edit #{project.title}" %>

<div class="container">
  <div class="row-fluid">
    <div class="span8">
      <%= simple_form_for(project,
                          :builder => Gitorious::View::FormBuilder,
                          :method => project.persisted? ? :put : :post,
                          :html => { :class => "form form-horizontal" }) do |f| %>
        <fieldset>
          <legend>Edit project</legend>
          <%= render 'form', :form => f, :project => project, :edit_slug => false, :edit_urls => true %>
          <%= render 'projects/edit/merge_request_statuses', :f => f, :project => project %>
          <div class="form-actions">
            <%= f.submit 'Save', :class => 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
    </div>
    <% if Gitorious::Configuration.get("enable_sidebar_license_descriptions") %>
      <div class="span4">
        <h3>License overview</h3>
        <dl>
          <% ProjectLicense.all.each do |license| %>
            <dt><%= license.name %></dt>
            <%=raw "<dd>#{license.description}</dd>" if license.description %></dd>
          <% end %>
        </dl>
      </div>
    <% end %>
  </div>
</div>
