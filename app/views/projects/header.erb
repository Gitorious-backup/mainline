<%
header_level = defined?(header_level) && header_level || 2
@body_class = "gts-private" if project.private?
%>

<%= site_header :data => { 'gts-env-project-view-state-path' => project_view_state_users_path(project, :format => "json") } do %>
  <h2>
    <%= link_to(project.title, project) %>
  </h2>
  <div class="gts-markup">
    <%= render_markdown(project.description).html_safe %>
  </div>
  <ul class="nav nav-tabs gts-header-nav gts-pjax" <%= "data-gts-active=#{defined?(active) && active.to_s}" %>>
    <%= options = [[:activities, project_path(project), "Activities"]]
        options << [:merge_requests, project_merge_requests_path(project), "Merge Requests <span class=\"count\">(#{project.open_merge_request_count})</span>"]
        options << [:wiki, project_page_path(project, "Home"), "Wiki"] if project.wiki_enabled?
        options << [:community, project_community_path(project), "Community"]
        header_navigation(options, :active => defined?(active) ? active : nil) %>
    <li class="gts-project-admin-ph gts-placeholder"></li>
  </ul>
<% end %>
