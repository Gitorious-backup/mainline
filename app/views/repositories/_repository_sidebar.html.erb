<li class="clone">
  <span class="name">
    <%= link_to h(repository.name), [repository.project, repository] -%>
  <% if repository.owned_by_group? -%>
    (<span class="group">
      <%= image_tag(repository.owner.avatar.url(:thumb), :width => "16", :height => "16") %>
      <%= link_to h(repository.owner.name), repository.owner -%>
    </span>)
  <% else -%>
    (<span class="user">
      <%= avatar(repository.user, :size => 16, :version => "tiny") %>
      <%= link_to h(repository.user.title), repository.user -%>
    </span>)
  <% end -%>
</li>
