<% @title = t("views.repos.show_page_title", :repo => repository.name, :title => @owner.title) -%>
<% content_for(:head) do %>
  <%= auto_discovery_link_tag(:atom, atom_auto_discovery_url,
        :title => atom_auto_discovery_title) -%>
<% end %>
<% if !repository.ready? %>
  <%= render(:partial => "pending", :locals => { :repository => repository }) %>
<% elsif !repository.has_commits? && committers(repository).include?(current_user) %>
  <%= render(:partial => "getting_started", :locals => { :repository => repository }) %>
<% else %>
  <%= partial("repositories/repo_header", {
          :repository => repository,
          :project => repository.project,
          :ref => ref,
          :app => Gitorious,
          :active => :activities,
          :header_level => 2
        }) %>
  <%= render(:partial => "activities", :locals => {
          :repository => repository,
          :events => events,
          :page => page,
          :total_pages => total_pages
        }) %>
<% end %>
