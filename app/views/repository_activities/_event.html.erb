<% action, body, category = action_and_body_for_event(event) %>
<% type = Action.name(event.action).gsub(' ', '-') %>
<% timestamp = l(event.created_at, :format => :short) %>

<div class="gts-event" title="<%= timestamp %>">
  <% if event.user %>
    <%= link_to(user_path(event.user), :class => 'event-author') do %>
      <%= gravatar(event.user.email, { :size => 24 }, :class => "gts-avatar") %>
      <%= !event.user.fullname.blank? ? event.user.fullname : event.user.login %>
    <% end %>
  <% else %>
    <%= event.actor_display %>
  <% end %>
  <%= content_tag(:span, action.html_safe, :class => 'event-action') if action.present? %>
  <%= content_tag(:span, body.html_safe, :class => 'event-body muted') if body.present? %>
</div>
