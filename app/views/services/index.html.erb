<%= partial("repositories/repo_header", {
        :repository => repository,
        :project => repository.project,
        :app => Gitorious,
        :active => :admin,
        :header_level => 2
      }) %>
<% @title = "Services for #{repository.slug}" %>
<div class="container">
  <div class="row">
    <div class="span8">
      <h1>Services for <a href="<%= project_repository_path(repository.project, repository) %>"><%= repository.slug %></a></h1>
      <% service_types.each do |service_type| %>
        <div>
          <h2><%= service_type.label %></h2>
          <%= partial "services/stats", :services => service_type.services, :repository => repository %>
          <%= error_messages(service_type.adapter) -%>
          <%= form_for(service_type.adapter, :as => :service, 
                       :url => create_project_repository_services_path(repository.project, repository, service_type.service_type),
                       :method => "post",
                       :html => { :class => "form-horizontal" }) do |f| %>
            <fieldset>
              <%= partial service_type.template_path, :f => f %>
            </fieldset>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
