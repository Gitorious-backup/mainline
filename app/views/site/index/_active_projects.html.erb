<%= cache_in_private([:site_index, :active_projects_recently], :expires_in => 1.hour) do %>
  <%= pull_box('Active projects') do %>
    <table class="table">
      <% @active_projects.each do |project| %>
        <tr class="project">
          <td>
            <%= link_to h(project.title), project %>
            <small class="hint">
              <%= truncate(h(project.stripped_description), :length => 65) %>
            </small>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
<% end %>
