<h2 class="activities">
  <% if showing_newsfeed? %>
    Your news feed
  <% else %>
    <%= t("views.site.dashboard.activities") %>
  <% end %>
  <%= feed_icon @atom_auto_discovery_url -%>
  <% if is_current_user?(user) -%>
    <small>(<%= newsfeed_or_user_events_link %>)</small>
  <% end %>
</h2>
<% if events.empty? %>
  <p class="hint">
    <%= personified(user, "You have", "#{user.title} has") %> no news.
  </p>
<% else %>
  <div id="user_events">
    <% prev_date = nil %>
    <% events.each do |event| %>
      <% if prev_date != event.created_at.strftime("%A, %B %e %Y") %>
        <p class="gts-date-heading">
          <span class="gts-date-heading-inner">
            <%= prev_date = event.created_at.strftime("%A, %B %e %Y") %>
          </span>
        </p>
      <% end %>
      <%= render "repository_activities/event", :event => event %>
    <% end %>
  </div>
<% end %>
