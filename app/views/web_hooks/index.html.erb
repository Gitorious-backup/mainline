<%= partial("repositories/repo_header", {
        :repository => repository,
        :project => repository.project,
        :app => Gitorious,
        :active => :admin,
        :header_level => 2
      }) %>
<% @title = "Web hooks for #{repository.slug}" %>
<div class="container">
  <div class="row">
    <div class="span8">
      <% if web_hooks.count > 0 %>
        <h1>Web hooks for <a href="<%= project_repository_path(repository.project, repository) %>"><%= repository.slug %></a></h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <td class="gts-cell-big">URL</td>
              <td class="gts-cell-small">Created by</td>
              <td colspan="2"></td>
            </tr>
          </thead>
          <tbody>
            <% web_hooks.each do |hook| %>
            <tr>
              <td><%= hook.url %></td>
              <td>
                <a href="<%= user_path(hook.user) %>"><%= hook.user.fullname %></a>
              </td>
              <td class="gts-cell-small">
                <a href="<%= project_repository_web_hook_path(repository.project, repository, hook) %>" data-method="delete"><i class="icon icon-remove"></i> Remove</a>
              </td>
              <td class="gts-cell-small">
                <a href="<%= project_repository_web_hook_tests_path(repository.project, repository, hook) %>" data-method="post"><i class="icon icon-play-circle"></i> Test</a>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
      <h2>Add web hook</h2>
      <%= form_for(web_hook, :as => :web_hook, :url => project_repository_web_hooks_url(repository.project, repository, web_hook), :method => "post", :html => { :class => "form-horizontal" }) do |f| -%>
        <%= render :partial => "form", :locals => { :form => f, :repository => repository } %>
      <% end %>
    </div>
  </div>
</div>
